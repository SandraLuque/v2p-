---
import { Icon } from "astro-icon/components";
---

<div
  class="hamburger cursor-pointer after:border-secondary text-secondary hidden md:grid"
>
  <Icon
    name="tabler:indent-decrease"
    class:list={["icon"]}
    width={25}
    height={25}
  />
</div>

<style lang="scss">
  .hamburger {
    aspect-ratio: 1 / 1;
    flex: none;
    height: 40px;
    overflow: hidden;
    position: relative;

    &::after {
      content: "";
      border-width: 1px;
      border-style: solid;
      width: 100%;
      height: 100%;
      position: absolute;
      box-sizing: border-box;
      left: 0;
      top: 0;
      border-radius: 50%;
      pointer-events: none;
    }
    .icon {
      transform: none;
      transform-origin: 50% 50% 0px;
      width: 40px;
      place-self: center;
    }
  }
</style>
