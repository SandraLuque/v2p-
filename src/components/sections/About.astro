---
import { getI18N } from "@/i18n";
import MainSection from "./MainSection.astro";
import Title from "@/components/Title.astro";
import TitlesWithContent from "./TitlesWithContent.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<MainSection id="sobre-mi" type="container" class="pb-32">
  <TitlesWithContent type="secondary">
    <h3 slot="title" set:html={i18n.SECTION_ABOUT_TITLE} />
    <h2 slot="content" set:html={i18n.SECTION_ABOUT_SUBTITLE} />
  </TitlesWithContent>
</MainSection>
